class Solution {
    public int peakIndexInMountainArray(int[] arr) {
        
        int s = 0;
        int e = arr.length - 1;

        while (s < e) {
            int mid = s + (e - s) / 2;

            // compare mid with next element
            if (arr[mid] < arr[mid + 1]) {
                // we are in increasing part
                s = mid + 1;
            } else {
                // we are in decreasing part
                // mid can be peak
                e = mid;
            }
        }

        // s == e â†’ peak index
        return s;
    }
}
